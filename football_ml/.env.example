# Copy this file to `.env` and replace placeholder values with your own credentials.
# Used by config.py via environment variables (optionally with python-dotenv).

# football-data.org token (https://www.football-data.org/)
FOOTBALL_DATA_API_TOKEN=YOUR_FOOTBALL_DATA_TOKEN

# RapidAPI credentials for "Free API Live Football Data"
FREE_API_RAPID_KEY=YOUR_RAPIDAPI_KEY
# Usually you do not need to change this host
FREE_API_HOST=free-api-live-football-data.p.rapidapi.com

# Defaults for fetching data
FD_COMPETITION_CODE=PL
SEASONS=2021,2022,2023
# Premier League example league id on the Free API (adjust as needed)
FREE_API_LEAGUE_ID=39
